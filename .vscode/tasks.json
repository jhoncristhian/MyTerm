{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: Compilar Term",
      "command": "g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-I",
        "${workspaceFolder}/include",
        "-g",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/terminal.cpp",
        "${workspaceFolder}/src/commands.cpp",
        "${workspaceFolder}/src/ui.cpp",
        "${workspaceFolder}/src/utils.cpp",
        "-o",
        "${workspaceFolder}/bin/myterm.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compila Term Nice"
    }
  ]
}
